  <actions>
    <org.jenkinsci.plugins.pipeline.modeldefinition.actions.DeclarativeJobAction plugin="pipeline-model-definition@1.6.0"/>
    <org.jenkinsci.plugins.pipeline.modeldefinition.actions.DeclarativeJobAction plugin="pipeline-model-definition@1.6.0"/>
    <org.jenkinsci.plugins.pipeline.modeldefinition.actions.DeclarativeJobPropertyTrackerAction plugin="pipeline-model-definition@1.6.0">
      <jobProperties/>
      <triggers/>
      <parameters/>
      <options/>
    </org.jenkinsci.plugins.pipeline.modeldefinition.actions.DeclarativeJobPropertyTrackerAction>
  </actions>
  <description></description>
  <keepDependencies>false</keepDependencies>
  <properties/>
  <definition class="org.jenkinsci.plugins.workflow.cps.CpsFlowDefinition" plugin="workflow-cps@2.80">
    <script>pipeline {
    agent{
        label &apos;master&apos;
        }
    options {
        timestamps()
        ansiColor(&apos;xterm&apos;)
    }
    stages {
            stage(&apos;download files from git&apos;) {
                steps {
                    sh &quot;rm -rf devops&quot;
                    sh &quot;git clone  https://github.com/karpovichart/devops.git&quot;
                    dir(&apos;devops&apos;){
                        sh &quot;pwd&quot;
                        sh &quot;git checkout dev&quot;
                        sh &quot;cp ansible/pb_conf_wp.yml /home/tomcat/devops/ansible&quot;
                        sh &quot;cp ansible/ansible.cfg /home/tomcat/devops/ansible&quot;
                        sh &quot;cp -r ansible/roles /home/tomcat/devops/ansible/roles&quot;
                    }
                }
             }
            stage(&quot;running ansible playbook&quot;) {
            steps {
                ansiblePlaybook(
                becomeUser: &quot;tomcat&quot;,
                colorized: true,
                inventory: &quot;home/tomcat/devops/ansible/hosts.ini&quot;,
                playbook: &quot;/home/tomcat/devops/ansible/pb_conf_wp.yml&quot;)
                }
            }
    }
}</script>
    <sandbox>true</sandbox>
  </definition>
  <triggers/>
  <authToken>pipeline_token.txt</authToken>
  <disabled>false</disabled>
</flow-definition>


